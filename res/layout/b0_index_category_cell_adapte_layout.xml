<?xml version="1.0" encoding="utf-8"?>
<com.insthub.ecmobile.component.CategorySellingCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/body"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_image"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/m_top_image" />

    <LinearLayout
        android:id="@+id/two_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/m_good_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/two_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/m_good_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_right_content1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/body_cont_bg"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/good_left1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/m_good_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/body_cont_bg"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/good_right1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/m_good_right" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/patner"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/m_patner" />

    <ImageView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/m_item_01" />

</com.insthub.ecmobile.component.CategorySellingCell>