<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#000000" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:background="#000000" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/nav_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/item_grid_header_arrow_icon" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8" >

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/searcher_new_search_box"
                android:cursorVisible="false"
                android:hint="@string/search_input"
                android:imeOptions="actionSearch"
                android:paddingLeft="35dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/search_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/searcher_new_search_icon" />
        </FrameLayout>

        <Button
            android:id="@+id/search_filter"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/filter_blue_btn"
            android:gravity="center"
            android:text="@string/filter"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>